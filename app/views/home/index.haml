.container
  .gravatar= image_tag gravatar_url, alt: name
  .name= name
  .links
    = link_to github_url, class: 'link', target: '_blank' do
      = icon('github')
    = link_to linkedin_url, class: 'link', target: '_blank' do
      = icon('linkedin-square')
    = link_to lunar_logic_url, class: 'link', target: '_blank' do
      = icon('rocket')
    %a{ href: "mailto:#{email}", class: 'link' }
      = icon('envelope')
